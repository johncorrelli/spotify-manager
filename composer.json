{
    "name": "johncorrelli/planning-center-spotify",
    "description": "Watches your Spotify Premium account and skips songs/albums/artists you do not like automatically.",
    "type": "project",
    "config": {
        "platform": {
            "php": "8.1.0"
        }
    },
    "autoload": {
        "psr-4": {
          "App\\": "app"
        }
    },
    "scripts": {
        "phan": "phan --allow-polyfill-parser",
        "standards": "php-cs-fixer fix app --dry-run --show-progress=none --verbose --diff",
        "standards:fix": "php-cs-fixer fix app"
    },
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "phan/phan": "^5.3"
    }
}
